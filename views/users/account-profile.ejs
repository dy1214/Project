<%- include('../partials/header2') %>

<main>
    <section class="pt-3">
        
        <div class="container" id="GM_font">
            <div class="row">
    
                
                <div class="col-lg-4 col-xl-3">
                    <div class="offcanvas-lg offcanvas-end" tabindex="-1" id="offcanvasSidebar" >
                        <div class="offcanvas-header justify-content-end pb-2">
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasSidebar" aria-label="Close"></button>
                        </div>
    
                        
                        <div class="offcanvas-body p-3 p-lg-0">
                            <div class="card bg-light w-100">
    
                            
                                <!-- Card body START -->
                                <div class="card-body p-3">
                                    <!-- Avatar and content -->
                                    <div class="text-center mb-3">
                                        <!-- Avatar -->
                                        <div class="avatar avatar-xl mb-2">
                                            <img class="avatar-img rounded-circle border border-2 border-white" src="/img/man.png" alt="">
                                        </div>
                                        <h6 class="mb-0"><%= user.name %></h6>
                                        <a href="#" class="text-reset text-primary-hover small"><%= user.username %></a>
                                        <hr>
                                    </div>
    
                                    <!-- Sidebar menu item START -->
                                    <ul class="nav nav-pills-primary-soft flex-column">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="/user/<%= user._id %>/account/profile"><i class="bi bi-person fa-fw me-2"></i>My 프로필</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" href="/user/<%= user._id %>/account/party"><i class="bi bi-people fa-fw me-2"></i>My 파티</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" href="account-travelers.html"><i class="bi bi-wallet fa-fw me-2"></i>My 결제</a>
                                        </li>
                                    </ul>
                                    <!-- Sidebar menu item END -->
                                </div>
                                
                            </div>
                        </div>
                    </div>	
                   	
                </div>
               
    
                
                <div class="col-lg-8 col-xl-9">
                    <div class="vstack gap-4">
                        <div class="card border">
                            
                            <div class="card-header border-bottom">
                                <h4 class="card-header-title" id="GB_font">MY 프로필</h4>
                            </div>
    
                            <!-- Card body START -->
                            <div class="card-body">
                                <!-- Form START -->
                                <form class="row g-3">
                                    
                                    <div class="col-md-6">
                                        <label class="form-label">이름</label>
                                        <input type="text" class="form-control" value="<%=userData.name%>" placeholder="">
                                    </div>
    
                                    
                                    <div class="col-md-6">
                                        <label class="form-label">이메일</label>
                                        <input type="email" class="form-control" value="<%=user.username%>" placeholder="">
                                    </div>
    
                                    
                                    <div class="col-md-6">
                                        <label class="form-label">총 결제 금액</label>
                                        <input type="text" class="form-control" value="<%=user.amount%>원" placeholder="">
                                    </div>

                                    
                                    <div class="col-md-6">
                                        <label class="form-label">가입되어 있는 파티</label>
                                        <% userData.party_id.forEach(party => { %>
                                        <input type="text" class="form-control mb-2" value="<%= party.ott_name %>" placeholder="">
                                        <% }) %>
                                    </div>
                                    
    
                                    
                                    <div class="col-12 text-end">
                                        <!--<a href="#" class="btn btn-primary mb-0">수정하기</a>-->
                                    </div>
                                </form>
                                <!-- Form END -->
                            </div>
                            <!-- Card body END -->
                        </div>
                        
                  
                    </div>
                </div>
                
            </div>
        </div>
        
   
    </section>

</main>


<%- include('../partials/footer2') %>